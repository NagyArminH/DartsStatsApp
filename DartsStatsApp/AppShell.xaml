<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="DartsStatsApp.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:DartsStatsApp"
    xmlns:views="clr-namespace:DartsStatsApp.Views"
    Shell.FlyoutBehavior="Disabled"
    Title="DartsStatsApp">

    <TabBar
        Shell.TabBarBackgroundColor="#FFFFFF"
        Shell.TabBarForegroundColor="#111827"
        Shell.TabBarUnselectedColor="#9CA3AF"
        Shell.TabBarTitleColor="#111827"
        >
        <Tab Title="Home" Icon="home.png">
            <ShellContent ContentTemplate="{DataTemplate views:HomePageView}"/>
        </Tab>
        <Tab Title="World Ranking" Icon="ranking.png">
            <ShellContent ContentTemplate="{DataTemplate views:OOMListView}"/>
        </Tab>
        <Tab Title="Tournaments" Icon="tournament.png">
            <ShellContent ContentTemplate="{DataTemplate views:TournamentsView}"/>
        </Tab>
        <Tab Title="Comparison" Icon="compare.png">
            <ShellContent ContentTemplate="{DataTemplate views:PlayerComparisonView}"/>
        </Tab>
    </TabBar>

</Shell>
