<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="DartsStatsApp.Views.TournamentsView"
             Title="TournamentsView">
    
    <CollectionView ItemsSource="{Binding GroupedTournaments}">
        <CollectionView.ItemTemplate>
            <DataTemplate>
                <StackLayout>
                    <!-- Month header -->
                    <Label Text="{Binding Month}"
                           FontAttributes="Bold"
                           FontSize="18"
                           Padding="5"
                           BackgroundColor="#eee"/>
                    
                    <!-- Inner CollectionView a tournamentekre-->
                    <CollectionView ItemsSource="{Binding Tournaments}"
                                    SelectionMode="None"
                                    BackgroundColor="#fafafa"
                                    Margin="10,0,0,10">
                        <CollectionView.ItemTemplate>
                            <DataTemplate>
                                <Grid Padding="5">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="120"/>
                                    </Grid.ColumnDefinitions>
                                    <Label Text="{Binding TournamentName}" Grid.Column="0"/>
                                    <Label Text="{Binding StartDate, StringFormat='{0:yyyy.MM.dd}'}" Grid.Column="1"/>
                                </Grid>
                            </DataTemplate>
                        </CollectionView.ItemTemplate>
                    </CollectionView>
                </StackLayout>
            </DataTemplate>
        </CollectionView.ItemTemplate>
    </CollectionView>
</ContentPage>