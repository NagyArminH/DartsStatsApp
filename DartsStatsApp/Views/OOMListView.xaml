<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:vm="clr-namespace:DartsStatsApp.ViewModels"
             x:Class="DartsStatsApp.Views.OOMListView"
             Title="World Ranking">

    <Grid RowDefinitions="Auto, Auto, *" Padding="10" RowSpacing="3">

        <SearchBar Placeholder="Search by name"
               Grid.Row="0"
               Text="{Binding SearchText, Mode=TwoWay}"
               SearchCommand="{Binding SearchCommand}"/>
        
        <Grid Padding="5" BackgroundColor="#eee" Grid.Row="1">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="50"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="100"/>
        </Grid.ColumnDefinitions>

        <Label Text="#" FontAttributes="Bold" Grid.Column="0" HorizontalOptions="Start"/>
        <Label Text="Name" FontAttributes="Bold" Grid.Column="1" HorizontalOptions="Start"/>
        <Label Text="Earnings" FontAttributes="Bold" Grid.Column="2" HorizontalOptions="End"/>
        </Grid>

    <CollectionView ItemsSource="{Binding PlayerList}" 
                        SelectionMode="None" 
                        Grid.Row="2" 
                        HorizontalOptions="Fill" 
                        VerticalOptions="Fill">
        <CollectionView.ItemsLayout>
            <LinearItemsLayout Orientation="Vertical" ItemSpacing="6"/>
        </CollectionView.ItemsLayout>

        <CollectionView.ItemTemplate>
            <DataTemplate>
                <Grid Padding="10">
                        <Grid.GestureRecognizers>
                            <TapGestureRecognizer
                                Command="{Binding Source={RelativeSource AncestorType={x:Type ContentPage}}, Path=BindingContext.NavigateToPlayerProfile}"
                                CommandParameter="{Binding .}"/>
                        </Grid.GestureRecognizers>
                    
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="1"/>
                        </Grid.RowDefinitions>

                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="50"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="120"/>
                        </Grid.ColumnDefinitions>

                        <Label Text="{Binding OOMPlacement}"
                            FontAttributes="Bold"
                            FontSize="16"
                            Grid.Row="0"
                            Grid.Column="0"
                            VerticalOptions="Center"/>

                        <Label Text="{Binding Name}"
                           FontAttributes="Bold"
                           FontSize="16"
                           Grid.Row="0"
                           Grid.Column="1"
                           VerticalOptions="Center"/>

                        <Label Text="{Binding OOMEarnings, StringFormat='Â£{0:N0}'}"
                           Grid.Row="0"
                           Grid.Column="2"
                           FontSize="16"
                           VerticalOptions="Center"
                           HorizontalOptions="End"/>
                    
                        <BoxView Grid.Row="1"
                           Grid.ColumnSpan="3"
                           HeightRequest="1"
                           BackgroundColor="#ccc"
                           Margin="0,5,0,0"/>
                    </Grid>
            </DataTemplate>
        </CollectionView.ItemTemplate>
    </CollectionView>
    </Grid>
</ContentPage>