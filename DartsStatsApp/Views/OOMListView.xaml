<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:vm="clr-namespace:DartsStatsApp.ViewModels"
             x:Class="DartsStatsApp.Views.OOMListView"
             Title="OOMListView">

    <Grid RowDefinitions="Auto, Auto, *" Padding="10" RowSpacing="3">

        <SearchBar Placeholder="Search by name"
               Grid.Row="0"
               Text="{Binding SearchText, Mode=TwoWay}"
               SearchCommand="{Binding SearchCommand}"/>
        
        <Grid Padding="5" BackgroundColor="#eee" Grid.Row="1">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="50"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="100"/>
        </Grid.ColumnDefinitions>

        <Label Text="#" FontAttributes="Bold" Grid.Column="0" HorizontalOptions="Start"/>
        <Label Text="Name" FontAttributes="Bold" Grid.Column="1" HorizontalOptions="Start"/>
        <Label Text="Earnings" FontAttributes="Bold" Grid.Column="2" HorizontalOptions="End"/>
        </Grid>

    <CollectionView ItemsSource="{Binding PlayerList}" 
                        SelectionMode="None" 
                        Grid.Row="2" 
                        HorizontalOptions="Fill" 
                        VerticalOptions="Fill">
        <CollectionView.ItemsLayout>
            <LinearItemsLayout Orientation="Vertical" ItemSpacing="3"/>
        </CollectionView.ItemsLayout>

        <CollectionView.ItemTemplate>
            <DataTemplate>
                <Grid Padding="10">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="50"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="120"/>
                    </Grid.ColumnDefinitions>

                    <Label Text="{Binding OOMPlacement}"
                            FontAttributes="Bold"
                            Grid.Column="0"
                            VerticalOptions="Center"/>

                    <Label Text="{Binding Name}"
                           FontAttributes="Bold"
                           Grid.Column="1"
                           VerticalOptions="Center"/>

                    <Label Text="{Binding OOMEarnings, StringFormat='Â£{0:N0}'}"
                            Grid.Column="2"
                            VerticalOptions="Center"
                           HorizontalOptions="End"/>
                </Grid>
            </DataTemplate>
        </CollectionView.ItemTemplate>
    </CollectionView>
    </Grid>
</ContentPage>