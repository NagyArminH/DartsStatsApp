<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:vm="clr-namespace:DartsStatsApp.ViewModels"
             x:Class="DartsStatsApp.Views.OOMListView"
             Title="OOMListView">

    <CollectionView ItemsSource="{Binding playerList}" SelectionMode="None">
        <CollectionView.ItemTemplate>
            <DataTemplate>
                <Grid Padding="10">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="50"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="100"/>
                    </Grid.ColumnDefinitions>

                    <Label Text="{Binding Name}"
                           FontAttributes="Bold"
                           VerticalOptions="Center"/>
                    
                    <Label Text="{Binding OOMPlacement}"
                            Grid.Column="1"
                            VerticalOptions="Center"/>
                    
                    <Label Text="{Binding OOMEarnings, StringFormat='{}{0:C}'}"
                            Grid.Column="2"
                            VerticalOptions="Center"
                           HorizontalOptions="End"/>
                </Grid>
            </DataTemplate>
        </CollectionView.ItemTemplate>
    </CollectionView>
    
</ContentPage>