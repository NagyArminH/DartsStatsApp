<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:telerik="http://schemas.telerik.com/2022/xaml/maui"
             x:Class="DartsStatsApp.Views.PlayerComparisonView"
             Title="Player Comparison">

    <ScrollView>
        <VerticalStackLayout Padding="10" Spacing="10">
            <Label Text="Compare two players" FontSize="20" FontAttributes="Bold" HorizontalOptions="Center"/>

            <Grid ColumnDefinitions="*,*" ColumnSpacing="12" RowSpacing="8">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <telerik:RadComboBox
                    x:Name="CmbBxA"
                    ItemsSource="{Binding PlayerOptionsA}"
                    DisplayMemberPath="DisplayName"
                    SelectedItem="{Binding SelectedPlayerA}"
                    IsEditable="True"
                    IsFilteringEnabled="True"
                    SearchMode="Contains"
                    HighlightTextColor="Red"
                    SearchTextPath="DisplayName"
                    Placeholder="Choose a player"
                    IsDropDownClosedOnSelection="True"
                    Grid.Row="0"
                    Grid.Column="0">
                </telerik:RadComboBox>

                <telerik:RadComboBox
                    x:Name="CmbBxB"
                    ItemsSource="{Binding PlayerOptionsB}"
                    DisplayMemberPath="DisplayName"
                    SelectedItem="{Binding SelectedPlayerB}"
                    IsEditable="True"
                    IsFilteringEnabled="True"
                    SearchMode="Contains"
                    SearchTextPath="DisplayName"
                    HighlightTextColor="Red"
                    Placeholder="Choose a player"
                    IsDropDownClosedOnSelection="True"
                    Grid.Row="0"
                    Grid.Column="1">
                </telerik:RadComboBox>
            </Grid>

            <Label Text="Select two different players to compare their statistics" HorizontalOptions="Center" FontAttributes="Italic" TextColor="Gray">
                <Label.Triggers>
                    <DataTrigger TargetType="Label" Binding="{Binding IsReady}" Value="True">
                        <Setter Property="IsVisible" Value="False"/>
                    </DataTrigger>
                </Label.Triggers>
            </Label>

            <Border Stroke="#E2E8F0" StrokeThickness="1" BackgroundColor="White" Padding="15" StrokeShape="RoundRectangle 14" IsVisible="{Binding IsReady}">
                <Border.Shadow>
                    <Shadow Opacity="0.15" Radius="8"/>
                </Border.Shadow>
                
            <Grid ColumnSpacing="12" RowSpacing="40" IsVisible="{Binding IsReady}">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <Label Grid.Row="0" Grid.Column="0"
                    Text="{Binding PlayerFormA.Matches}" HorizontalTextAlignment="Center"/>
                
                    <Border Grid.Row="0" Grid.Column="1" Padding="10,4" BackgroundColor="#F1F5F9" Stroke="#CBD5E1" StrokeThickness="1" StrokeShape="RoundRectangle 10">
                <Label Grid.Row="0" Grid.Column="1"
                    Text="Total Matches" FontAttributes="Bold" HorizontalOptions="Center"/>
                    </Border>
                
                <Label Grid.Row="0" Grid.Column="2"
                    Text="{Binding PlayerFormB.Matches}" HorizontalTextAlignment="Center"/>

                <Label Grid.Row="1" Grid.Column="0"
                    Text="{Binding PlayerFormA.WinPercentage, StringFormat='{0}%'}" HorizontalTextAlignment="Center"/>
                
                    <Border Grid.Row="1" Grid.Column="1" Padding="10,4" BackgroundColor="#F1F5F9" Stroke="#CBD5E1" StrokeThickness="1" StrokeShape="RoundRectangle 10">
                        <Label Grid.Row="1" Grid.Column="1"
                        Text="Win %" FontAttributes="Bold" HorizontalOptions="Center"/>
                    </Border>
                
                    <Label Grid.Row="1" Grid.Column="2"
                    Text="{Binding PlayerFormB.WinPercentage, StringFormat='{0}%'}" HorizontalTextAlignment="Center"/>

                <Label Grid.Row="2" Grid.Column="0"
                       Text="{Binding PlayerFormA.Average, StringFormat='{}{0:N2}'}" HorizontalTextAlignment="Center"/>
                
                    <Border Grid.Row="2" Grid.Column="1" Padding="10,4" BackgroundColor="#F1F5F9" Stroke="#CBD5E1" StrokeThickness="1" StrokeShape="RoundRectangle 10">
                        <Label Grid.Row="2" Grid.Column="1"
                               Text="Average" FontAttributes="Bold" HorizontalOptions="Center"/>
                    </Border>
                
                <Label Grid.Row="2" Grid.Column="2"
                       Text="{Binding PlayerFormB.Average, StringFormat='{}{0:N2}'}" HorizontalTextAlignment="Center"/>

                <Label Grid.Row="3" Grid.Column="0"
                       Text="{Binding PlayerFormA.CheckoutPercentage, StringFormat='{}{0:N2} %'}" 
                       HorizontalTextAlignment="Center"/>
                
                    <Border Grid.Row="3" Grid.Column="1" Padding="10,4" BackgroundColor="#F1F5F9" Stroke="#CBD5E1" StrokeThickness="1" StrokeShape="RoundRectangle 10">
                        <Label Grid.Row="3" Grid.Column="1"
                               Text="Checkout %" FontAttributes="Bold" HorizontalOptions="Center"/>
                    </Border>
                
                 <Label Grid.Row="3" Grid.Column="2"
                    Text="{Binding PlayerFormB.CheckoutPercentage, StringFormat='{}{0:N2} %'}" HorizontalTextAlignment="Center"/>

                <Label Grid.Row="4" Grid.Column="0"
                    Text="{Binding PlayerFormA.Total180s}" HorizontalTextAlignment="Center"/>
                
                    <Border Grid.Row="4" Grid.Column="1" Padding="10,4" BackgroundColor="#F1F5F9" Stroke="#CBD5E1" StrokeThickness="1" StrokeShape="RoundRectangle 10">
                        <Label Grid.Row="4" Grid.Column="1"
                               Text="Total 180s" FontAttributes="Bold" HorizontalOptions="Center"/>
                    </Border>
                
                 <Label Grid.Row="4" Grid.Column="2"
                    Text="{Binding PlayerFormB.Total180s}" HorizontalTextAlignment="Center"/>

                <Label Grid.Row="5" Grid.Column="0"
                    Text="{Binding PlayerFormA.Total140s}" HorizontalTextAlignment="Center"/>
                
                    <Border Grid.Row="5" Grid.Column="1" Padding="10,4" BackgroundColor="#F1F5F9" Stroke="#CBD5E1" StrokeThickness="1" StrokeShape="RoundRectangle 10">
                        <Label Grid.Row="5" Grid.Column="1"
                               Text="Total 140s" FontAttributes="Bold" HorizontalOptions="Center"/>
                    </Border>
                
                 <Label Grid.Row="5" Grid.Column="2"
                        Text="{Binding PlayerFormB.Total140s}" HorizontalTextAlignment="Center"/>

                <Label Grid.Row="6" Grid.Column="0"
                    Text="{Binding PlayerFormA.Total100PlusCheckouts}" HorizontalTextAlignment="Center"/>
                
                    <Border Grid.Row="6" Grid.Column="1" Padding="10,4" BackgroundColor="#F1F5F9" Stroke="#CBD5E1" StrokeThickness="1" StrokeShape="RoundRectangle 10">
                        <Label Grid.Row="6" Grid.Column="1"
                               Text="100+ Checkouts" FontAttributes="Bold" HorizontalOptions="Center"/>
                    </Border>
                
                 <Label Grid.Row="6" Grid.Column="2"
                        Text="{Binding PlayerFormB.Total100PlusCheckouts}" HorizontalTextAlignment="Center"/>
            </Grid>
            </Border>
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>